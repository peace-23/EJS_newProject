<h1>
    <%= title %>
</h1>

<% if (messages() && messages().success) { %>
    <div class="flash-message success">
        <%= messages().success %>
    </div>
    <% } else if (messages() && messages().error) { %>
        <div class="flash-message error">
            <%= messages().error %>
        </div>
        <% } %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

