<!-- Login View Display -->
    <div>
        <form id="loginForm" action="/account/login" method="post">
            <fieldset>
                <label for="email">Email:</label><br>
                <input type="email" id="email" name="email" required pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
                    value="<%= locals.account_email %>"><br><br>
                <label for="password">Password:</label><br>
                <input type="password" id="pword" name="password" required
                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
                    title="Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character"
                    placeholder="Enter password"> <br><br><span id="showpswd">Show
                    Password</span><br><br>
                <button type="submit">Login</button><br><br>
            </fieldset>
        </form>

        <p>Don't have an account? <a href="/account/register" id="registrationLink">Sign-up</a></p>
    </div>
    <script src="/js/script.js"></script>