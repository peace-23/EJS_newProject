<div><!-- Add Vehicle View Title -->
    <h1 class="addVehicleTitle"><%= title %></h1>


    <!-- Add Vehicle  View Message -->
    <%- messages() %>


        <!-- Add Vehicle  View Error Display -->
        <% if (errors) { %>
            <ul class="notice">
                <% errors.array().forEach(error=> { %>
                    <li>
                        <%= error.msg %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>



                <!-- Registration View Display -->
                <div class="addInvContainer">
                    <form action="/inv/add-Inventory" method="post">
                        <fieldset class="addInvBox">
                            <p id="addInvWarning">ALL FIELDS ARE REQUIRED.</p>
                            <hr />

                            <label for="inv_classification">Classification:</label><br>
                            <select id="inv_classification" name="inv_classification" required>
                                <option value="" disabled selected>Select classification</option>
                                <!-- Placeholder option -->
                                <% classifications.rows.forEach(classification=> { %>
                                    <option value="<%= classification.classification_id %>"
                                        <%=classification.classification_id===locals.inv_classification ? 'selected'
                                        : '' %>><%= classification.classification_name %>
                                    </option>
                                    <% }) %>
                            </select><br><br>

                            <label for="invMake">Make:</label><br>
                            <input type="text" id="invMake" name="inv_make" required value="<%= locals.inv_make %>"
                                placeholder="3 Character minimum"><br><br>

                            <label for="invModel">Model:</label><br>
                            <input type="text" id="invModel" name="inv_model" required value="<%= locals.inv_model %>"
                                placeholder="3 Character minimum"><br><br>

                            <label for="invDescription">Description:</label><br>
                            <textarea id="invDescription" rows="4" cols="50" name="inv_description" required
                                value="<%= locals.inv_description %>"></textarea><br><br>

                            <label for="invImage">Image Path:</label><br>
                            <input type="text" id="invImage" name=inv_image required
                                value="<%= locals.inv_image %>"><br><br>

                            <label for="invThumbnail">Thumbnail Path:</label><br>
                            <input type="text" id="invThumbnail" name="inv_thumbnail" required
                                value="<%= locals.inv_thumbnail %>" /><br><br>


                            <label for="invPrice">Price:</label><br>
                            <input type="text" id="invPrice" name=inv_price required
                                value="<%= locals.inv_price%>" /><br><br>


                            <label for="invYear">Year:</label><br>
                            <input type="number" id="invYear" name=inv_year min="1900" max="2099" required
                                value="<%= locals.inv_year %>" /><br><br>

                            <label for="invMiles">Miles:</label><br>
                            <input type="number" id="invMiles" name=inv_miles min="0" required
                                value="<%= locals.inv_miles %>" /><br><br>

                            <label for="invColor">Color:</label><br>
                            <input type="text" id="invColor" name=inv_color required
                                value="<%= locals.inv_color%>" /><br><br>

                            <button type="submit" id="addNewVehicleBtn">Add Vehicle</button><br><br>
                            <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>
                            "
                            <% } %>>
                        </fieldset>

                    </form>

                </div>
</div>
<script src="/js/script.js"></script>