<!-- Add Vehicle View Title -->
<h1 class="editTitle">Add Vehicle</h1>


<!-- Add Vehicle  View Message -->
<%- messages() %>


    <!-- Add Vehicle  View Error Display -->
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>


            <!-- Registration View Display -->
            <div class="editContainer">
                <form id="updateForm" action="/inv/edit-inventory" method="post">
                    <fieldset class="editBox">
                        <p id="editvWarning">ALL FIELDS ARE REQUIRED.</p>
                        <hr />
                        <label for="myDropdown">Select a Classification:</label>
                        <!-- <select id="myDropdown" name="Classification"> -->
                            <%- ClassificationSelect %>

                            <table id="inventoryDisplay"></table>
                            <br><br>

                        <label for="invMake">Make:</label><br>
                        <input type="text" id="invMake" name="inv_make" required value="<%= locals.inv_make %>"
                            placeholder="3 Character minimum"><br><br>


                        <label for="invModel">Model:</label><br>
                        <input type="text" id="invModel" name="inv_model" required value="<%= locals.inv_model %>"
                            placeholder="3 Character minimum"><br><br>

                        <label for="invDescription">Description:</label><br>
                        <textarea id="invDescription" rows="4" cols="50" name="inv_description" required
                            value="<%= locals.inv_description %>"></textarea><br><br>

                        <label for="imagePathInput">Image Path:</label><br>
                        <input type="text" id="imagePathInput" name=inv_image required
                            value="<%= locals.inv_image %>"><br><br>

                        <label for="thumbnailPathInput">Thumbnail Path:</label><br>
                        <input type="text" id="thumbnailPathInput" name="inv_thumbnail" required
                            value="<%= locals.inv_thumbnail %>" /><br><br>


                        <label for="yearInput">Year:</label><br>
                        <input type="number" id="yearInput" name=inv_year min="1900" max="2099" required
                            value="<%= locals.inv_year %>" /><br><br>

                        <label for="milesInput">Miles:</label><br>
                        <input type="number" id="milesInput" name=inv_miles min="0" required
                            value="<%= locals.inv_miles %>" /><br><br>

                        <label for="colorInput">Color:</label><br>
                        <input type="text" id="colorInput" name=inv_color required
                            value="<%= locals.inv_color%>" /><br><br>

                        <button type="submit" attribute="disabled" id="editBtn">Update Vehicle</button><br><br>
                        <input type="hidden" name="inv_id"
                        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                        <% } %>>

                    </fieldset>

                </form>

            </div>
            <script src="/js/script.js"></script>
            <script src="/js/inv-update.js"></script>
            <script src="/js/inventory.js"></script>